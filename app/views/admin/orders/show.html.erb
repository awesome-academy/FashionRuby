



<h2>Order detail</h2>

<table class="table table-bordered">
  <tr>
    <th><%=t("global.canpaigs.ordername") %></th>
    <th><%=t("global.canpaigs.productname") %></th>
    <th>Email</th>
    <th><%=t("global.canpaigs.quantity") %></th>
    <th><%=t("global.canpaigs.sub") %></th>
    <th><%=t("global.footer.address") %></th>
  </tr>
  <tr>
    <td><%= @order.Name %></td>
    <td>
      <% @order.products.each do |product| %>
        <%=link_to product.name, product_path(product.id) %></br>
      <% end %>
    </td>
    <td><%= @order.Email %></td>
    <td>
      <% @order.orderdetails.each do |orderdetail| %>
        <%= orderdetail.quantity %></br>
      <% end %>
    </td>
    <td></td>
    <td><%= @order.Address %></td>
  </tr>

</table>
