



<h2>Order detail</h2>

<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Products</th>
    <th>Email</th>
    <th>Quantity</th>
    <th>Total</th>
    <th>Address</th>
  </tr>
  <tr>
    <td><%= @order.Name %></td>
    <td>
      <% @order.products.each do |product| %>
        <%=link_to product.name, product_path(product.id) %></br>
      <% end %>
    </td>
    <td><%= @order.Email %></td>
    <td>
      <% @order.orderdetails.each do |orderdetail| %>
        <%= orderdetail.quantity %></br>
      <% end %>
    </td>
    <td></td>
    <td><%= @order.Address %></td>
  </tr>

</table>
