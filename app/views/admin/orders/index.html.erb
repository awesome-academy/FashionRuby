<% provide(:title, 'Products') %>
<div class="container">
    <%= link_to "export", admin_orders_path(format: :csv),class: 'btn btn-warning' %>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">
                    <%= t("global.canpaigs.id") %>
                </th>
                <th scope="col">
                    <%= t("global.canpaigs.name") %>
                </th>
                <th scope="col">
                    <%= t("global.canpaigs.setting") %>
                </th>
                <th scope="col">
                    <%= t("global.canpaigs.statuss") %>
                </th>
            </tr>
        </thead>
        <tbody>
            <% @orders.each do |order|%>
            <div class="aaa">
                <tr id="order-<%= order.id %>">
                    <td>
                        <%= order.id %>
                    </td>
                    <td>
                        <%= link_to order.Name, admin_order_path(order.id) %>
                    </td>
                    <div name="ccc">
                        <td>
                            <%= link_to t("global.canpaigs.delete"), "javascript:void(0);", dataa: { confirm: "You sure?" },data: "#{order.id}",class: 'btn btn-warning' , class:"btn1" %>
                        </td>
                    </div>
                    <% if order.status == false %>
                    <td>
                        <%= link_to t("global.canpaigs.acct"), "javascript:void(0);" ,dataa: { confirm: "You sure?" },data: "#{order.id}" , class: "btn2 #{order.id}" %>
                    </td>
                    <% else %>
                    <td>
                        <%= t("global.canpaigs.acct1")  %>
                    </td>
                    <% end %>
                </tr>
            </div>
            <% end %>
        </tbody>
    </table>

    <%= will_paginate %>

    <script type="text/javascript">
    $(document).ready(function() {
        $('.btn1').on('click', function(event) {
            var id = $(this).attr('data');
            var token = $('meta[name=csrf-token]').attr('content');
            $.ajaxSetup({
                beforeSend: function(xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', token);
                }
            });
            $.ajax({
                    url: 'http://localhost:3000/en/admin/orders/' + id,
                    dataType: 'json',
                    method: 'POST',
                    data: {
                        _method: 'DELETE',
                        id: id
                    }
                })
                .done(function(e) {
                    $('#order-' + id).remove();
                });
        });
    });
    </script>
    <script type="text/javascript">
    $(document).ready(function() {
        $('.btn2').on('click', function(event) {
            var ids = $(this).attr('data');
            var token = $('meta[name=csrf-token]').attr('content');
            $.ajaxSetup({
                beforeSend: function(xhr) {
                    xhr.setRequestHeader('X-CSRF-Token', token);
                }
            });
            $.ajax({
                    url: 'http://localhost:3000/en/admin/orders/' + ids,
                    dataType: 'json',
                    method: 'PATCH',
                    data: {
                        id: ids
                    }
                })
                .done(function(e) {
                    if ($('a[class="btn2 ' + ids + '"]').text().toString() == 'Accept') {
                        $('a[class="btn2 ' + ids + '"]').text("Accepted");
                    } else {
                        $('a[class="btn2 ' + ids + '"]').text("Đã chấp thuận");
                    };
                });
        });
    });
    </script>
