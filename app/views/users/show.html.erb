<% provide(:title, @user.name) %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<% gravatar_for @user %>
				<%= @user.name %>
			</h1>
		</section>
	</aside>
</div>

<nav>
	<br>
	<% if logged_in? %>
	<li><%= link_to t("global.header.set"), edit_user_path(current_user)  %></li>
	<br>
	<li>
		<%= link_to t("global.header.logout"), logout_path, method: :delete  %>
	</li>
</ul>
</li>
<% else %> <li>
	<%= link_to t("global.header.login"), login_path ,class: 'acount-btn' %></li>
	<% end %>
</ul>
</nav>



